	// ++ rarus Камаев П.В. 06.10.2020 Задача № 24955
	Если ТипЗнч(Источник) = Тип("ДокументОбъект.vftРейс") И ПланыОбмена.ГлавныйУзел() <> Неопределено Тогда
		Возврат;
	КонецЕсли;
	// -- rarus Камаев П.В. 06.10.2020
	
	ОбменДаннымиСобытия.МеханизмРегистрацииОбъектовПередУдалением("Полный", Источник, Отказ);
	
