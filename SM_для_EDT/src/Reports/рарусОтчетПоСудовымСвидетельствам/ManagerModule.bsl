		КомандаОтчет = КомандыОтчетов.Добавить();
		
		КомандаОтчет.Менеджер = Метаданные.Отчеты.рарусОтчетПоСудовымСвидетельствам.ПолноеИмя();
		КомандаОтчет.Представление = НСтр("ru = 'Отчет по судовым свидетельствам'");
		
		//КомандаОтчет.РежимЗаписи = "Записывать";
